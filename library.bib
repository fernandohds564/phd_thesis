keywords = {Accelerator,beam dynamics,collective effects,collimator,coupled-bunch instabilities,coupled-bunch transverse mode coupling,headtailmodes,high-intensity beam,impedance,wake fields},
school = {{\'{E}}cole Polytechinique F{\'{e}}d{\'{e}}rale de Lausanne},
