  issn		= {24699888},
  journal	= {Physical Review Accelerators and Beams},
  number	= {2},
  pages		= {024401},
  title		= {{Self-consistent simulations and analysis of the
		  coupled-bunch instability for arbitrary multibunch
		  configurations}},
  volume	= {19},
  year		= {2016}
}

