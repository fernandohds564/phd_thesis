author = {Laslett, L. Jackson and Neil, V. Kelvin and Sessler, Andrew M.},
doi = {https://doi.org/10.1063/1.1719595},
file = {:home/fernando/Documents/Mendeley Desktop/Laslett, Neil, Sessler/Laslett, Neil, Sessler - 1965 - Transverse Resistive Instabilities of Intense Coasting Beams in Particle Accelerators.pdf:pdf},
