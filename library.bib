doi = {10.1103/PhysRevSTAB.8.042001},
file = {:home/fernando/Documents/Mendeley Desktop/Zagorodnov, Weiland/Zagorodnov, Weiland - 2005 - TETM field solver for particle beam simulations without numerical Cherenkov radiation.pdf:pdf},
