journal = {Physical Review Special Topics - Accelerators and Beams},
keywords = {Courant-Snyder,betatron functions,coupling,lattices,linear dynamics,synchrotron},
number = {4},
pages = {044001},
title = {{Analytical methods for describing charged particle dynamics in general focusing lattices using generalized Courant-Snyder theory}},
url = {http://link.aps.org/doi/10.1103/PhysRevSTAB.17.044001},
volume = {17},
